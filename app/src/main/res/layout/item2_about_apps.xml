<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AboutApps"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="About NekahApp"
            android:textColor="@color/textColorAbu"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nkh_logo"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/AppVersion"
            android:textColor="@color/textColorAbu"
            android:textSize="11dp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/detail1"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textColor="@color/textColorAbu"
            android:textSize="11dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/detail2"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textColor="@color/textColorAbu"
            android:textSize="11dp"
            android:layout_marginTop="11dp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/detail3"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textColor="@color/textColorAbu"
            android:textSize="11dp"
            android:layout_marginTop="11dp"/>

    </LinearLayout>

</LinearLayout>