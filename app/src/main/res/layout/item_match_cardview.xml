<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_match"
    android:layout_gravity="center"
    card_view:cardCornerRadius="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="320dp">
        <RelativeLayout
            android:id="@+id/itemMatch"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/userPhoto"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:background="@drawable/aliko_photo"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="13dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userPhoto"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="17dp"
                android:text="Nama"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/userAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/userName"
                android:text="25 y.o"
                android:textSize="13dp"
                android:textColor="@color/textColorAbu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/userAge"
                android:layout_below="@id/userName"
                android:text="years old"
                android:textSize="13dp"
                android:textColor="@color/textColorAbu"/>
            <TextView
                android:id="@+id/userPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/userName"
                android:layout_alignParentRight="true"
                android:text="New York, USA"
                android:textSize="11dp"
                android:textColor="@color/textColorAbu"/>

            <ImageView
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_below="@id/userName"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/userPlace"
                android:background="@drawable/ic_location" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>


