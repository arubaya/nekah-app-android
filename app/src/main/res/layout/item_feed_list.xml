<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/itemFeed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="8dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feedlist"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photoFeed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@id/img_photoFeed"
        android:layout_toRightOf="@id/img_photoFeed">

        <TextView
            android:id="@+id/tv_nameFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:text="Nama User"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_statusFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="12sp"
            android:text="Sebuah tulisan status"/>
    </LinearLayout>
    <Button
        android:id="@+id/likeStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_dislike"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"/>
</RelativeLayout>