<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFeedStatus"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:overScrollMode="ifContentScrolls"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_photoFeedDetail"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/text_NamaFeedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@id/img_photoFeedDetail"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/text_StatusFeedDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/textColorAbu"
                android:layout_below="@id/text_NamaFeedStatus"
                android:layout_toRightOf="@id/img_photoFeedDetail"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_StatusFeedDetail"
                android:layout_toRightOf="@id/img_photoFeedDetail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnLike"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_dislike"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/btnComment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_comment"
                    android:layout_marginLeft="30dp"/>
                <Button
                    android:id="@+id/btnReply"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_reply"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>